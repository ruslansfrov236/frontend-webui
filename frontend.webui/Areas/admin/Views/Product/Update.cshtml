@using frontend.business.Application.Dtos.Product
@model UpdateProductDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Update Product</div>
            <hr>
            <form asp-controller="Product" asp-action="Update" asp-route-id="@Model.Id" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input asp-for="@Model.Title" class="form-control" id="input-1" placeholder="Enter Your Title">
                    <span asp-validation-for="@Model.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.File"></label>
                    <div>
                        <img style="width:100px; height:100px; object-fit:cover" src="~/assets/img/@Model.FilePath" alt="@Model.FilePath" />
                    </div>
                    <input asp-for="@Model.File" class="form-control" placeholder="Enter Your File">
                    <span asp-validation-for="@Model.File"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Text">Description</label>
                    <textarea asp-for="@Model.Text" class="form-control" style="resize:none !important;  height:30vh!important"></textarea>
                    <span asp-validation-for="@Model.Text"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Create</button>
                </div>
            </form>
        </div>
    </div>
</div>